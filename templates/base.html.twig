<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

       {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
            <link rel="stylesheet" href="/bundles/easyadmin/app.f5b3a5e3.css">
            <link rel="shortcut icon" href="data:image/svg+xml,&lt;svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22&gt;&lt;text y=%221.2em%22 font-size=%2296%22&gt;â¬›&lt;/text&gt;&lt;/svg&gt;">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}


        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="/bundles/easyadmin/app.914bb6ba.js"></script>
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        {% endblock %}
    </head>

    <body>
    {# render the navbar #}
        <div class="h-100">

            <nav class="navbar fs-5 navbar-expand-lg navbar-dark bg-dark">
                <button class="navbar-toggler m-2" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse " id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item ms-2">
                            <a class="nav-link active" aria-current="page" href="http://localhost:8000/"><p>Home</p></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="http://localhost:8000/read/article"><p>Article</p></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="http://localhost:8000/create/article"><p>Write an article</p></a>
                        </li>
                        {% if app.user.roles is defined %}
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="http://localhost:8000/profile/{{ app.user.id }}"><p>Profile</p></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="http://localhost:8000/logout"><p>Logout</p></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="http://localhost:8000/admin"><p>Admin</p></a>
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="http://localhost:8000/login"><p>Login</p></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="http://localhost:8000/register"><p>Register</p></a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
            {# render the different pages #}
            <div class="m-4 fs-5">
            {% block body %}{% endblock %}
            </div>

        </div>
        {# render a footer #}
        <footer class="d-flex flex-wrap justify-content-around fs-5 align-items-center py-3 my-4 border-top">
            <a href="https://github.com/timotheedelacretaz"><p class="col-md-4 mb-0 text-muted">&copy; 2023 Timothee Delacratez</p></a>

            <ul class="nav col-md-4 justify-content-end">
                <li class="nav-item"><a href="http://localhost:8000" class="nav-link px-2 text-muted"><p>Home</p></a></li>
            </ul>
        </footer>
    </body>
</html>
