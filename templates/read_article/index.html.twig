{% extends 'base.html.twig' %}

{% block title %}Hello ReadArticleController!{% endblock %}

{# render all the article made, recommended article have a green border #}
{% block body %}
<div class="d-flex flex-row flex-wrap justify-content-around align-content-center">
    {% for x in result %}
        {% if x.upvote >=3 %}
            <div class="card recommendedCard" style="width: 18rem;border-color: #1ea471;border-width: 2px">
        {% else %}
                <div class="card m-2" style="width: 18rem;">
        {% endif %}
            <div class="card-body">
                <h5 class="card-title ">{{ x.title }}</h5>
                <h6 class="card-text " >{{ x.chapeau|raw }}</h6>
                <p>written the {{ x.date|date('d-m-Y') }} by <a href="http://localhost:8000/profile/{{ x.userid.id }}">{{ x.userid.username }}</a></p>
                <a href="http://localhost:8000/article/{{ x.slug }}" class="btn btn-primary">Read more</a>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
